<%- include("header") -%>

<div class="box" id="heading">
  <h1>
    <%= listTitle %>
  </h1>
</div>

<div class="box">
  <% newListItems.forEach((item)=>{ %>
  <form action="/delete" + method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item.id %>" onChange="this.form.submit()"></input>
      <input type="hidden" name="listTitle" value="<%= listTitle %>"></input>
      <p> <%= item.name %> </p>
    </div>
  </form>
  <% }) %>
  <form class="item" action="/add" method="post">
    <input id="newItemField" type="text" name="addItem" placeholder="New Item" autocomplete="off" required>
    <button type="submit" name="title" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>